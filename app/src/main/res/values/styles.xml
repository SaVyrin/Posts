<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="LoginTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="errorTextColor">@color/error_text_color</item>
        <item name="errorIconDrawable">@null</item>
        <item name="boxStrokeErrorColor">@color/box_stroke_error_color</item>
        <item name="errorTextAppearance">@style/Text.Regular.12</item>

        <item name="hintTextAppearance">@style/Text.Medium.12</item>
        <item name="hintTextColor">@color/hint_text_color</item>
        <item name="android:textColorHint">@color/hint_text_color</item>

        <item name="boxBackgroundColor">@color/box_background_color</item>
        <item name="boxCornerRadiusTopEnd">10dp</item>
        <item name="boxCornerRadiusTopStart">10dp</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxStrokeColor">@drawable/box_stroke_color_selector</item>
        <item name="boxStrokeWidthFocused">1dp</item>
    </style>

    <style name="LoginTextInputEditText">
        <item name="android:textAppearance">@style/Text.Medium.16</item>
    </style>

    <style name="SearchTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="hintTextColor">@color/search_hint_text_color</item>
        <item name="android:textColorHint">@color/search_hint_text_color</item>
        <item name="boxBackgroundColor">@color/search_box_background_color</item>
        <item name="boxCornerRadiusTopEnd">22dp</item>
        <item name="boxCornerRadiusTopStart">22dp</item>
        <item name="boxCornerRadiusBottomStart">22dp</item>
        <item name="boxCornerRadiusBottomEnd">22dp</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeColor">@color/transparent</item>
        <item name="boxStrokeWidthFocused">0dp</item>
        <item name="endIconTint">@color/search_end_icon_color_color</item>
    </style>

    <style name="SearchTextInputEditText">
        <item name="android:textAppearance">@style/Text.Medium.14</item>
        <item name="background">@color/transparent</item>
    </style>


    <style name="Button.Login" parent="ThemeOverlay.AppCompat">
        <item name="colorPrimary">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
    </style>


    <style name="ErrorSnackBar" parent="@style/Widget.MaterialComponents.Snackbar">
        <item name="android:background">@color/error_snack_bar_background_color</item>
        <item name="elevation">0dp</item>
        <item name="cornerRadius">0dp</item>
        <item name="android:layout_margin">8dp</item>
    </style>

    <style name="ErrorSnackBarTextView" parent="@style/Widget.MaterialComponents.Snackbar.TextView">
        <item name="android:textColor">@color/error_snack_bar_text_color</item>
        <item name="android:textAppearance">@style/Text.Medium.14</item>
    </style>

    <style name="SearchView.Montserrat14" parent="Widget.AppCompat.SearchView">
        <item name="android:textAppearance">@style/Text.Medium.14</item>
        <item name="android:textSize">14sp</item>
    </style>

</resources>